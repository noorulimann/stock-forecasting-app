# ============================================================================
# Environment Configuration for Stock Forecasting Application
# ============================================================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
WORKERS=2

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGO_USERNAME=admin
MONGO_PASSWORD=stockforecast2026
MONGO_DATABASE=stock_data
MONGODB_URI=mongodb://admin:stockforecast2026@mongodb:27017/

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=stock-forecasting

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# ============================================================================
# Security Settings
# ============================================================================
# Generate a secure secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# API Key for authentication (optional)
# API_KEY=your-api-key-here

# ============================================================================
# Data Collection Settings
# ============================================================================
# Yahoo Finance API settings
DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT,TSLA
DATA_REFRESH_INTERVAL=3600  # seconds

# ============================================================================
# Model Settings
# ============================================================================
MODEL_SAVE_PATH=./saved_models
DEFAULT_MODEL=LightGBM
ENABLE_MODEL_CACHE=true

# ============================================================================
# Feature Engineering
# ============================================================================
DEFAULT_LOOKBACK=60  # days
DEFAULT_FORECAST_HORIZON=7  # days

# ============================================================================
# Performance & Scaling
# ============================================================================
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_TTL=300  # seconds

# ============================================================================
# Docker-specific Settings
# ============================================================================
COMPOSE_PROJECT_NAME=stock-forecasting
COMPOSE_FILE=docker-compose.yml

# ============================================================================
# Nginx Configuration (if using reverse proxy)
# ============================================================================
NGINX_HOST=localhost
NGINX_PORT=80
SSL_ENABLED=false

# ============================================================================
# Monitoring & Observability
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true

# ============================================================================
# Development Settings (override in .env.development)
# ============================================================================
# DEBUG=true
# API_RELOAD=true
# LOG_LEVEL=DEBUG
